@model ProiectTi.Models.Employee

@{
    ViewData["Title"] = "Detalii";
}

@if (Model is not null)
{
    <div>
        <h4>Detalii Angajat</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nume)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nume)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Prenume)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Prenume)
            </dd>
            @if (Model.DisplayPicture is not null)
            {
                <dt class="col-sm-2">
                    Poză
                </dt>
                <dd class="col-sm-10">
                    <img src="data:@Model.DisplayPicture.ContentType;base64,@Model.DisplayPicture.Base64Image"
                         style="width:100px; height:100px" />
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.SalarBaza)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.SalarBaza) lei
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Spor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Spor)%
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PremiiBrute)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PremiiBrute) lei
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.BrutImpozitabil)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.BrutImpozitabil) lei
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Impozit)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Impozit) lei
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CAS)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CAS) lei
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CASS)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CASS) lei
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Retineri)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Retineri) lei
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.ViratCard)
            </dt>
            <dd class="col-sm-10">
                @(@Html.DisplayFor(model => model.ViratCard)) lei
            </dd>
        </dl>
    </div>
    <div>
        @Html.ActionLink("Editare", "Edit", new {Id = Model.Id}) |
        <a asp-action="Index">Înapoi la index</a>
    </div>
}
else
{
    <h1 class="text-xl-center"> Angajatul nu există!</h1>
}