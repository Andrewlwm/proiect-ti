@model ProiectTi.Data.Models.Percentages

@{
    ViewData["Title"] = "Percentanges";
}


<h4>Procentaje</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Percentages">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input asp-for="Id" class="form-control" type="number" hidden />
            <div class="form-group">
                <label asp-for="CAS" class="control-label"></label>
                <input min="0" max="1" step="0.01" type="number" asp-for="CAS" class="form-control" />
                <span asp-validation-for="CAS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CASS" class="control-label"></label>
                <input min="0" max="1" step="0.01" type="number" asp-for="CASS" class="form-control" />
                <span asp-validation-for="CASS" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Impozit" class="control-label"></label>
                <input min="0" max="1" step="0.01" type="number" asp-for="Impozit" class="form-control" />
                <span asp-validation-for="Impozit" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Actualizare" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Înapoi la index</a>
</div>

@section Scripts {
<script>
    $(function(){
         const cas = $('#CAS');
         const cass = $('#CASS');
         const impozit = $('#Impozit');

         function validare() {
              $("input[type=submit]")
                  .prop("disabled", !(cas.val() && cass.val() && impozit.val()));
          }

          validare();
          $('input').on('input', validare);
    });
</script>
}
