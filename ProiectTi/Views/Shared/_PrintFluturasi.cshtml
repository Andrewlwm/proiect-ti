@model IEnumerable<ProiectTi.Models.Employee>
@{
    Layout = null;
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - ProiectTi</title>
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" />
        <style>
            .column {
                float: left;
                width: 50%;
            }

            .row:after {
                content: "";
                display: table;
                clear: both;
            }
        </style>
    </head>
}

<div style="font-size:16px; font-weight:500; margin-left: 50px">
    @foreach (var item in Model)
    {
        <div class="row">
            <div class="column">
                Data: @DateTime.Now.ToShortDateString()
                <br />
                @Html.DisplayNameFor(model => model.Nume).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.Nume)</b>
                <br />
                @Html.DisplayNameFor(model => model.Prenume).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.Prenume)</b>
                <br />
                @Html.DisplayNameFor(model => model.SalarBaza).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.SalarBaza)</b>
                <br />
                @Html.DisplayNameFor(model => model.Spor).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.Spor)%</b>
                <br />
                @Html.DisplayNameFor(model => model.PremiiBrute).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.PremiiBrute) lei</b>
                <br />
                @Html.DisplayNameFor(model => model.BrutImpozitabil).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.BrutImpozitabil) lei</b>
            </div>
            <div class="column">
                <br />
                @Html.DisplayNameFor(model => model.Impozit).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.Impozit) lei</b>
                <br />
                @Html.DisplayNameFor(model => model.CAS).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.CAS) lei</b>
                <br />
                @Html.DisplayNameFor(model => model.CASS).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.CASS) lei</b>
                <br />
                @Html.DisplayNameFor(model => model.Retineri).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.Retineri) lei</b>
                <br />
                @Html.DisplayNameFor(model => model.ViratCard).ToUpper():
                <b>@Html.DisplayFor(modelItem => item.ViratCard) lei</b>
            </div>
        </div>
        <hr />
        <br />
    }
</div>



